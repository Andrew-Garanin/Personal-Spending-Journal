<div class="grid-container">
    <div class="grid-x grid-padding-x">
        <div class="cell">
            <h2>Траты за месяц <%=@month%> </h2>
            <a href=<%=cheques_path%>/months>Назад к списку</a>
        </div>

    <div class="cell">
        <table>
            <thead>
                <tr>
                    <th>Дата</th>
                    <th>Место</th>
                    <th>Категория</th>
                    <th>Товар</th>
                    <th>Количество</th>
                    <th>Цена</th>
                </tr>
            </thead>
            <tbody>
            <% @cheques.each do |cheque| %>
                <tr>
                    <td><%=cheque.date%></td>
                    <td><%=cheque.place%></td>
                    <td><%=cheque.category%></td>
                    <td><%=cheque.product%></td>
                    <td><%=cheque.count%></td>
                    <td><%=cheque.price%> руб.</td>
                </tr>
            <% end %>
            </tbody>
        </table>
    </div>
</div>